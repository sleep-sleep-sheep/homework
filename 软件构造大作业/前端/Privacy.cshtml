
    <style>
       

            .sidebar.active {
                transform: translateX(0);
            }

        .lottie-container {
            width: 100%;
            height: 200px;
        }

        .qa-records {
            margin-top: 20px;
        }

        .qa-record {
            border: 1px solid #ccc;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            overflow: hidden;
        }

        .qa-record-summary {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .qa-record-content {
            display: none;
        }

        .qa-record.expanded .qa-record-summary {
            display: none;
        }

        .qa-record.expanded .qa-record-content {
            display: block;
        }

        .toggle-btn {
            cursor: pointer;
            color: blue;
        }

        .qa-records-scroll {
            max-height: 300px;
            overflow-y: auto;
        }
    </style>

